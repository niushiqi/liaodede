<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_close"
        style="@style/smallTextPadding"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/close_btn_stroke"
        android:text="关闭"
        android:textColor="#6F768C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_lav"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="134dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lottie/progress_yellow.json"
        app:lottie_loop="true"
        tools:background="@color/accent"
        />


    <ImageView
        android:id="@+id/box_iv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_intimacy_box1_normal"
        app:layout_constraintBottom_toBottomOf="@+id/loading_lav"
        app:layout_constraintEnd_toEndOf="@+id/loading_lav"
        app:layout_constraintStart_toStartOf="@+id/loading_lav"
        app:layout_constraintTop_toTopOf="@+id/loading_lav"
        />

    <TextView
        android:id="@+id/tv_report"
        style="@style/smallTextPadding"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rect_round_black_solid"
        android:text="举报"
        android:textColor="#FFEC1C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_iv"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>