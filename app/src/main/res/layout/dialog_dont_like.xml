<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="270dp"
    android:background="@drawable/bg_convention_normal">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_dialog_close_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不喜欢的原因？"
        android:textColor="#fff30950"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请告诉我们原因，为你匹配更合适的人"
        android:textColor="#ff4d4d4d"
        android:textSize="12sp"
        android:layout_marginTop="78dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_dont_like_gray"
        android:textColor="#616161"
        android:textSize="12sp"
        android:id="@+id/btn_no_voice"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="25dp"
        android:text="没声音不说话" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_dont_like_gray"
        android:textColor="#616161"
        android:textSize="12sp"
        android:id="@+id/btn_sex"
        android:layout_marginTop="115dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="色情/威胁/辱骂" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_dont_like_gray"
        android:textColor="#616161"
        android:textSize="12sp"
        android:id="@+id/btn_ad"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="170dp"
        android:text="发广告" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_dont_like_blue"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:id="@+id/btn_no_clear"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:text="说不清" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价是匿名的，ta不会知道"
        android:textColor="#ffb2b2b2"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"/>

</RelativeLayout>