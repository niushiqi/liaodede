<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_user_level_bg"
            android:gravity="center"
            android:textColor="#BB3B53"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="1"
            />

        <TextView
            android:id="@+id/tv_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#3E3E3E"
            android:textSize="12sp"
            tools:text="21级"
            />

        <TextView
            android:id="@+id/tv_level_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="#3E3E3E"
            android:textSize="9sp"
            tools:text="经验值已满"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/ll_user_level"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:text="任务"
            android:textColor="#999999"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_text"
            android:textColor="#EB5236"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="累积拉新5人"
            />

        <TextView
            android:id="@+id/tv_task_status"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_task_status"
            android:gravity="center"
            android:textColor="#884D00"
            android:textSize="12sp"
            tools:text="去完成"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_describe_rules"
        android:layout_below="@id/rl_2"
        android:layout_alignStart="@id/rl_2"
        android:text="注册后输入我的邀请码，就算成功"
        android:textColor="#3E3E3E"
        android:textSize="9sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
