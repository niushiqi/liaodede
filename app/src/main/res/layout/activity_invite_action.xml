<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#F2F2F2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="我的邀请码"
                        android:textSize="13sp"
                        android:textColor="#878787"
                        android:layout_marginTop="26dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:textColor="#3E3E3E"
                        android:textSize="30sp"/>

                    <ImageView
                        android:id="@+id/iv_copy"
                        android:layout_width="61dp"
                        android:src="@drawable/ic_copy"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/txt_invite_num"
                        android:layout_width="wrap_content"
                        android:text="可邀请人数：5"
                        android:textSize="11sp"
                        android:textColor="#3E3E3E"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/iv_invite_friend"
                        android:layout_width="171dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_invite_friend_me_act"
                        android:layout_marginTop="20dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="邀朋友，每周至少得3元，上不封顶"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#1CC3C3"
                        android:layout_marginBottom="32dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="211dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_invite_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_top"/>

                <TextView
                    android:id="@+id/textview1"
                    app:layout_constraintTop_toBottomOf="@id/imageview1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:text="1、邀请朋友注册，立刻加为好友"
                    android:textSize="14sp"
                    android:layout_marginTop="33dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="32dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="240dp"
                    android:layout_height="244dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_invite_image1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="对方输入我的邀请码\n注册成为好友"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview2"
                    app:layout_constraintTop_toTopOf="@id/imageview2"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textview2"
                    app:layout_constraintTop_toBottomOf="@id/imageview2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:text="2、跟好友每天聊几句，现金金币拿不停"
                    android:textSize="14sp"
                    android:layout_marginTop="21dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="32dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="180dp"
                    android:layout_height="244dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_invite_image2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="108dp"
                    android:background="@drawable/rect_round_red_10"
                    android:padding="10dp"
                    android:text="友好度持续升级，\n领翻倍金币现金！"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/imageview3"
                    app:layout_constraintTop_toTopOf="@id/imageview3"/>

                <TextView
                    android:id="@+id/textview3"
                    app:layout_constraintTop_toBottomOf="@id/imageview3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:text="3、也可开启聊天，遇到有缘人，申请加好友"
                    android:textSize="14sp"
                    android:layout_marginTop="21dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="32dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageview4"
                    android:layout_width="180dp"
                    android:layout_height="273dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_invite_image3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="限时开放，遇到最\n匹配的那个他/她"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview4"
                    app:layout_constraintTop_toTopOf="@id/imageview4"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="聊天超过30秒\n解锁加好友"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview4"
                    app:layout_constraintTop_toTopOf="@id/imageview4"
                    android:layout_marginTop="155dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textview4"
                    app:layout_constraintTop_toBottomOf="@id/imageview4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:text="4、完成任务挑战，领取专属奖励"
                    android:textSize="14sp"
                    android:layout_marginTop="21dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="32dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageview5"
                    android:layout_width="180dp"
                    android:layout_height="244dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_invite_image4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="新手任务、每日任务\n等你来挑战！"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview5"
                    app:layout_constraintTop_toTopOf="@id/imageview5"
                    android:layout_marginTop="136dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textview5"
                    app:layout_constraintTop_toBottomOf="@id/imageview5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:text="5、跟有缘人聊天时，时刻有奖惊喜不停"
                    android:textSize="14sp"
                    android:layout_marginTop="21dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="32dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageview6"
                    android:layout_width="205dp"
                    android:layout_height="315dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_invite_image5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="随机小奖从天而降\n快领!"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview6"
                    app:layout_constraintTop_toTopOf="@id/imageview6"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="聊天到30s\n解锁礼箱大奖"
                    android:textStyle="bold"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/imageview6"
                    app:layout_constraintTop_toTopOf="@id/imageview6"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="151dp"
                    android:background="@drawable/rect_round_red_10"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_last"
                    app:layout_constraintTop_toBottomOf="@id/imageview6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:text="邀请亲朋好友加入吧，一起在“聊得得”玩转各种奖励，邀请方法如下：\n\n1、点击[复制]复制邀请码发送给对方，请对方在应用市场下载“聊得得”，注册时输入邀请码。立成好友！\n\n2、点击[邀请好友]保存二维码图片到本地，微信发给对方，对方扫描后下载“聊得得”，注册时输入邀请码。立成好友！"
                    android:textSize="13sp"
                    android:layout_marginTop="37dp"
                    android:layout_marginRight="35dp"
                    android:textColor="#3E3E3E"
                    android:layout_marginLeft="35dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_last"
                    android:layout_height="46dp"/>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</layout>