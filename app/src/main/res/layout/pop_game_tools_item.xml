<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black_80"
      >

    <android.support.constraint.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
      <View
          android:layout_width="2dp"
          android:layout_height="12dp"
          android:background="#fff8cf2a"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="7dp"
          android:text="提示"
          android:textColor="#ff666666"
          android:textSize="12sp"
          />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:src="@drawable/btn_dialog_close_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

      <TextView
          android:id="@+id/title_tv"
          android:layout_width="126dp"
          android:layout_height="17dp"
          android:layout_marginTop="60dp"
          android:text="用“二娃”兑换金币"
          android:textColor="#ff3e3e3e"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="选择兑换数量"
        android:textColor="#ff212121"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/title_tv"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        />

    <LinearLayout
        android:id="@+id/count_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_tv"
        >
      <ImageView
          android:id="@+id/delete_iv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_tip_delete_normal"
          />
      <TextView
          android:id="@+id/total_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="30dp"
          android:layout_marginStart="30dp"
          android:text="5"
          android:textColor="#ff232323"
          android:textSize="30sp"
          />
      <ImageView
          android:id="@+id/add_iv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_tip_add_normal"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="可兑换：15金币"
        android:textColor="#ff855406"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_ll"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_tv"
        >
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/cancel_btn"
          android:layout_width="90dp"
          android:layout_height="39dp"
          android:background="@drawable/rect_rounded_left_right_arc4"
          android:text="返回"
          android:textColor="#ffffffff"
          android:textSize="15sp"
          />

      <android.support.v7.widget.AppCompatButton
          android:id="@+id/convert_btn"
          android:layout_width="90dp"
          android:layout_height="39dp"
          android:layout_marginStart="10dp"
          android:background="@drawable/rect_rounded_left_right_arc"
          android:text="兑换"
          android:textColor="#ff884d00"
          android:textSize="15sp"
          />
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
  </android.support.constraint.ConstraintLayout>
</layout>