<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black_20"
      >
    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/bg_award_get"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv"
        android:scaleType="centerInside"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/btn_close_red_packet"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="恭喜你，已获得："
        android:textColor="#ff884d00"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintStart_toStartOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv"
        />
    <LinearLayout
        android:id="@+id/item_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        >
      <LinearLayout
          android:id="@+id/coin_ll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_jinbi_normal"
            />
        <TextView
            android:id="@+id/coin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="+0"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/stone_ll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="22dp"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_moshi_normal"
            />
        <TextView
            android:id="@+id/stone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="+0"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/cash_ll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="22dp"
          android:gravity="center"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_xianjin_normal"
            />
        <TextView
            android:id="@+id/cash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="+0"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/item_ll1"
        app:layout_constraintStart_toStartOf="@+id/item_ll1"
        app:layout_constraintTop_toBottomOf="@+id/item_ll1"
        >
      <LinearLayout
          android:visibility="gone"
          android:id="@+id/ll_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <ImageView
              android:layout_width="55dp"
              android:layout_height="58dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_red_packet_bg"
              />
          <ImageView
              android:id="@+id/packet1_iv"
              android:layout_width="53dp"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_packet_1029"
              />
        </RelativeLayout>
        <TextView
            android:id="@+id/packet1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_2"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:gravity="center"
          android:orientation="vertical"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <ImageView
              android:layout_width="55dp"
              android:layout_height="58dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_red_packet_bg"
              />
          <ImageView
              android:id="@+id/packet2_iv"
              android:layout_width="53dp"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_packet_1030"
              />
        </RelativeLayout>
        <TextView
            android:id="@+id/packet2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>

      <LinearLayout
          android:visibility="gone"
          android:id="@+id/ll_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:gravity="center"
          android:orientation="vertical"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
          <ImageView
              android:layout_width="55dp"
              android:layout_height="58dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_red_packet_bg"
              />
          <ImageView
              android:id="@+id/packet3_iv"
              android:layout_width="53dp"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_packet_1029"
              />
        </RelativeLayout>
        <TextView
            android:id="@+id/packet3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8"
            android:textColor="#884D00"
            android:textSize="18sp"
            />
      </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bg_iv2"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_tip_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_ll2"
        />
    <View
        android:layout_width="220dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/bg_iv2"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv2"
        app:layout_constraintTop_toTopOf="@+id/bg_iv2"
        app:layout_constraintBottom_toBottomOf="@+id/bg_iv2"
        android:background="#fff8e9"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_tip"
        app:layout_constraintBottom_toTopOf="@+id/bg_iv2"
        app:layout_constraintEnd_toStartOf="@+id/bg_iv2"
        app:layout_constraintStart_toStartOf="@+id/bg_iv2"
        app:layout_constraintTop_toTopOf="@+id/bg_iv2"
        />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="打开设置－开启通知，红包成熟
的通知就不会错过啦。"
        android:textColor="#ff884d00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_iv2"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv2"
        app:layout_constraintStart_toStartOf="@+id/bg_iv2"
        app:layout_constraintTop_toTopOf="@+id/bg_iv2"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/get_btn"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_red_packet_normal"
        android:text="一键领取"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_iv"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintStart_toStartOf="@+id/bg_iv"
        />
  </android.support.constraint.ConstraintLayout>
</layout>