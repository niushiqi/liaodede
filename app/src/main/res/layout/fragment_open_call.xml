    <data>

        <variable
            name="model"
            type="com.dyyj.idd.chatmore.model.network.result.MainResult.Data"
            />

        <variable
            name="model2"
            type="com.dyyj.idd.chatmore.model.network.result.RedPackageResult.RedPackageEntry"
