                    android:text='@{model2.openedNum+" 个红包"}'
                    android:textColor="#ffffec1c"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="5dp"
                android:text='@{"超越"+(model2.overPersonNum)+"%的用户"}'
                android:textColor="#fffeffff"
                android:textSize="12sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/read_packet_desc_ll"
                app:layout_constraintTop_toBottomOf="@+id/read_packet_desc_ll"
                />
