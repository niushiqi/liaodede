<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/bg_gift_img"
        android:src="@drawable/pop_bg_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/received_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="赠送给我的珍爱大大苏打实打实啊珍爱大大苏打实打实啊"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13dp"
        />

    <TextView
        android:id="@+id/received_gift_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/received_name"
        android:text="皇冠 ×1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13dp"
        />

    <ImageView
        android:id="@+id/received_gift_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/ic_gifts_placeholder"
        android:layout_alignRight="@id/bg_gift_img"
        android:layout_marginEnd="25dp"
        />


</RelativeLayout>
