<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="150dp"
    android:background="@drawable/bg_is_pay">
    <!--
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    -->

    <TextView
        android:id="@+id/tv_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="是否确定购买？"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/rl_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_t1"
        app:layout_constraintStart_toStartOf="@+id/tv_t1">

        <TextView
            android:id="@+id/isPay_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:paddingBottom="12dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:text="取消"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/isPay_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/isPay_cancel_btn"
            android:background="@drawable/shape_small_orange"
            android:paddingBottom="12dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:text="购买"
            android:textColor="#884D00"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
