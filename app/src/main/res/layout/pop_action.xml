            <!--app:layout_constraintTop_toTopOf="@+id/imageView21"-->
            <!--app:srcCompat="@drawable/ic_record"/>-->
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>