<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="210dp"
      android:layout_height="290dp"
      android:background="@drawable/rect_rounded_left_right_arc16"
      android:orientation="vertical"
      tools:background="@color/itemBackground"
      >

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/btn_share_red_packet_close"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="分享到微信群"
        android:textColor="#fff72e42"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="连开3个红包"
        android:textColor="#fff72e42"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_share_red_packet_normal"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_share_red_packet_normal2"
        />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/rect_rounded_left_right_arc12"
        android:text="立即分享"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />
  </LinearLayout>
</layout>