<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#3C2E1D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/guideline"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/txt_report"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rect_report_left"
            android:text="立即举报"
            android:textColor="#FFEC1C"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>

        <Button
            android:id="@+id/txt_cancel"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rect_round_solid_blue"
            android:text="没事儿"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

        <TextView
            android:id="@+id/textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="聊得得充分保护用户的权益，你可以："
            android:textColor="#B6B6B6"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_report"
            app:layout_constraintStart_toStartOf="@+id/txt_report"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="系统检测到对方的话语涉嫌违规 \n是否冒犯到了你？"
            android:textColor="#FFEC1C"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textview8"
            app:layout_constraintEnd_toEndOf="@+id/txt_cancel"
            app:layout_constraintStart_toStartOf="@+id/txt_report"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>