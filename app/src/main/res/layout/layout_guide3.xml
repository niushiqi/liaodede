<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.dyyj.idd.chatmore.weiget.WaterRippleView
      android:id="@+id/waterRippleView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="35dp"
      android:layout_marginStart="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:rippleColor="@color/white"
      app:rippleCenterIcon="@drawable/ic_gift_xianjin"
      app:rippleCount="5"
      app:rippleSpacing="7dp"
      app:rippleAutoRunning="true"
      />
  <ImageView
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_guide_normal3"
      app:layout_constraintBottom_toBottomOf="@+id/waterRippleView"
      app:layout_constraintEnd_toEndOf="@+id/waterRippleView"
      app:layout_constraintStart_toStartOf="@+id/waterRippleView"
      app:layout_constraintTop_toTopOf="@+id/waterRippleView"
      android:layout_marginTop="20dp"
      />
</android.support.constraint.ConstraintLayout>