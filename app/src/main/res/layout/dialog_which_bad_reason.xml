<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#222223"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/which_bad_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_dialog_close_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="请告诉我们原因，为你匹配更合适的人"
        android:textColor="#BFBFBF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ll1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ll2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="#616161"
            android:gravity="center"
            android:padding="20dp"
            android:text="没声音，不说话"
            android:textColor="#BFBFBF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="#616161"
            android:gravity="center"
            android:padding="20dp"
            android:text="色情/威胁/辱骂"
            android:textColor="#BFBFBF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/which_bad_last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="#616161"
            android:gravity="center"
            android:padding="20dp"
            android:text="发广告"
            android:textColor="#BFBFBF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="#616161"
            android:gravity="center"
            android:padding="20dp"
            android:text="说不清"
            android:textColor="#BFBFBF"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/which_bad_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="评价是匿名的，ta不会知道你"
        android:textColor="#BFBFBF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
