<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/bg_award_get"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv"
        android:scaleType="centerInside"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/btn_close_red_packet"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="恭喜你，已获得"
        android:textColor="#ff884d00"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintStart_toStartOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintStart_toStartOf="@+id/bg_iv"
        app:layout_constraintBottom_toTopOf="@+id/get_btn"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <LinearLayout
            android:id="@+id/item_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tv"
            >
          <LinearLayout
              android:id="@+id/coin_ll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:src="@drawable/ic_jinbi_normal"
                />
            <TextView
                android:id="@+id/coin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="+0"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/stone_ll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="22dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:src="@drawable/ic_moshi_normal"
                />
            <TextView
                android:id="@+id/stone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="+0"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/cash_ll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="22dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:src="@drawable/ic_xianjin_normal"
                />
            <TextView
                android:id="@+id/cash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="+0"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/item_ll1"
            app:layout_constraintStart_toStartOf="@+id/item_ll1"
            app:layout_constraintTop_toBottomOf="@+id/item_ll1"
            >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1030"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/item_ll1"
            app:layout_constraintStart_toStartOf="@+id/item_ll1"
            app:layout_constraintTop_toBottomOf="@+id/item_ll1"
            >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1030"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/item_ll1"
            app:layout_constraintStart_toStartOf="@+id/item_ll1"
            app:layout_constraintTop_toBottomOf="@+id/item_ll1"
            >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1030"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:gravity="center"
              android:orientation="vertical"
              >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
              <ImageView
                  android:layout_width="55dp"
                  android:layout_height="58dp"
                  android:scaleType="centerInside"
                  android:src="@drawable/ic_red_packet_bg"
                  />
              <ImageView
                  android:layout_width="53dp"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:src="@drawable/ic_packet_1029"
                  />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8"
                android:textColor="#884D00"
                android:textSize="18sp"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>

    </ScrollView>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/get_btn"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_red_packet_normal"
        android:text="立即领取"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_iv"
        app:layout_constraintEnd_toEndOf="@+id/bg_iv"
        app:layout_constraintStart_toStartOf="@+id/bg_iv"
        />
  </android.support.constraint.ConstraintLayout>
</layout>