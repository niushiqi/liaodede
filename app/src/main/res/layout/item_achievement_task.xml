<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="4.5dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="4.5dp"
    android:background="@drawable/shape_task_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        >

        <TextView
            android:id="@+id/tv_task_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_task_bg"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/tv_task_rank"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EB5236"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="新手福利"
                />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#3E3E3E"
                android:textSize="10sp"
                tools:text="新手福利"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_task_progress"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.dyyj.idd.chatmore.weiget.HorizontalProgressBar
                android:id="@+id/horizontal_progress_bar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="6dp"
                android:textColor="#3E3E3E"
                android:textSize="9sp"/>

        </LinearLayout>
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="18dp"
        android:layout_toRightOf="@+id/tv_task_rank"
        android:background="#F1F1F1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_task_status"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_task_status"
            android:gravity="center"
            android:textColor="#884D00"
            android:textSize="12sp"
            tools:text="去完成"
            />

        <TextView
            android:id="@+id/tv_task_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:textColor="#999999"
            android:textSize="11sp"
            tools:text="0.32现金 ，10金币"
            />
    </RelativeLayout>
</LinearLayout>
